<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_viewrestro"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="2dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/restro_photo"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight=".5"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/car" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.01"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/booking_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:singleLine="true"
                android:text="Today,10:46 Am"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/carnumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:singleLine="true"
                android:text="Prime CRN 22003247"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_sourceaddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@mipmap/green_circle"
                android:drawablePadding="5dp"
                android:padding="2dp"
                android:singleLine="true"
                android:text="E-24 Mohan Coopreative Industrial Estate...."
                android:textColor="@color/grey"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/txt_destinationaddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/red_circle"
                android:drawablePadding="5dp"
                android:padding="2dp"
                android:singleLine="true"
                android:text="Noida sec 49 "
                android:textColor="@color/grey"
                android:textSize="12sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/driverimage"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight=".5"
            android:scaleType="centerCrop"
            android:src="@mipmap/user_female_two" />

    </LinearLayout>

</android.support.v7.widget.CardView>