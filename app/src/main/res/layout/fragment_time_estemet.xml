<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backgroundtwo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/maintoolbar"
        android:orientation="vertical"
        android:weightSum="2">

        <fragment
            android:id="@+id/maparrive"
            class="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/piclocation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_fulldetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/mainlayoytt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="#313030"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/tv_textarrival"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="ESTIMATED ARRIVAL TIME IN 12 MINUTES"
                        android:textColor="#999999"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:id="@+id/imageView_close"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="top|right"
                            android:clickable="true"
                            android:src="@mipmap/avtar" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="1dp"
                                    android:layout_weight="1"
                                    android:background="#000000"
                                    android:gravity="center|left"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="10dp"
                                    android:text="NAME"
                                    android:textColor="@color/White"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#000000"
                                    android:gravity="center|left"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="10dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/White"
                                    android:textSize="10sp" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="1dp"
                                    android:layout_weight="1"
                                    android:background="#000000"
                                    android:gravity="center|left"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="10dp"
                                    android:text="LICENCE ID"
                                    android:textColor="@color/White"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_licence"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#000000"
                                    android:gravity="center|left"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="10dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/White"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="1dp"
                                    android:layout_weight="1"
                                    android:background="#000000"
                                    android:gravity="center|left"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="10dp"
                                    android:text="TAXI NAME"
                                    android:textColor="@color/White"
                                    android:textSize="10sp" />

                                <TextView
                                    android:id="@+id/tv_model"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#000000"
                                    android:gravity="center|left"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="5dp"
                                    android:paddingTop="10dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/White"
                                    android:textSize="10sp" />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#000000"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_tel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile No :"
                            android:textColor="@color/White" />

                        <!-- <TextView
                             android:id="@+id/tv_phonenumber"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="10dp"
                             android:text="9985895852"
                             android:textColor="@color/White" />-->

                        <TextView
                            android:id="@+id/tv_phonenumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textColor="@color/White"
                            />



                        <ImageView
                            android:id="@+id/iv_phone"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:src="@mipmap/btn_call" />


                    </LinearLayout>





                    <Button
                        android:textColor="@color/White"
                        android:id="@+id/btn_splite_rides"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@mipmap/button2"
                        android:gravity="center"
                        android:text="Splite Ride" />

                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
